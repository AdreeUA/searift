.social

    &__link
        display block
        font-size 0
        text-indent -999px
        border 1px solid #9fa5ab
        border-radius 3px
        width 30px
        height 30px
        margin-bottom 6px
        overflow hidden

        &:hover
            color $color-white

        &_vk
            &:hover
                background-color #4c75a3
                border-color #4c75a3

        &_fb
            &:hover
                background-color #3b5998
                border-color #3b5998

        svg
            margin-left 6px
            width 15px
            height 30px
            display block
