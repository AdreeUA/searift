.size
    margin-bottom 29px

    &__title
        font-size 14px
        display inline-block
        vertical-align top
        margin 10px 15px 0 0

    &__inner
        display inline-block
        vertical-align top
        width 70%

        input[type="checkbox"]
            opacity 0
            position absolute

    &__inputs
        m-cf()
        margin-bottom 6px

    &__label
        position relative
        cursor pointer
        transition all .3s
        margin-top 6px
        display inline-block
        padding 5px 0 5px 31px
        color $bg-nav

        &:before
            content ''
            width 21px
            height 21px
            background-color #f3f3f3
            border 1px solid #c9d2dc
            border-radius 50%
            position absolute
            left 0
            top 0

        &:after
            content ''
            position absolute
            width 7px
            height 7px
            background-color $bg-nav
            border-radius 50%
            top 8px
            left 8px
            opacity 0

    &__input-number
        display inline-block
        float right

        +below(xs)
            margin-right 15px

        input
            text-align center
            display inline-block
            width 36px
            height 36px
            background-color $color-white
            border 1px solid #adb6c0
            padding 0 3px
            padding-right 3px
            color $color-main

#size-m:checked + .size__label:after
#size-l:checked + .size__label:after
    opacity 1
