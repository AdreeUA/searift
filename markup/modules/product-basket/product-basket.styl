.product-basket
    background-color #f6f8fb
    border 1px solid #3c679a
    // border-radius 3px
    // display block
    color $color-main
    position absolute
    width 584px
    top 36px
    right 5px
    padding 21px
    line-height 1
    text-align left
    font-size 0
    display none

    +below(md)
        right -67px
    +below(sm)
        right 0
    +below(xs)
        // pointer-events none
        position fixed
        left 0
        right 0
        width 100%

    &_open
        display block

    &__item
        position relative
        border-bottom 1px solid #cfd4dc
        padding-bottom 20px
        margin-bottom 20px
        font-size 12px

        &:before
            content ''
            display inline-block
            height 100%
            width 1%
            vertical-align middle

    &__item-close
        position absolute
        top 50%
        right -2px
        margin-top -22px
        padding 5px
        cursor pointer

        &:hover
            color $color-link

    &__info
    &__technic
        display inline-block
        vertical-align middle

    &__technic
        width 39%
        text-align center
        padding-right 10px
        margin-left 3%

        +below(sm)
            width 100%

    &__info
        m-cf()
        color $bg-nav
        width 55%
        line-height 1

        +below(sm)
            width 100%
            margin-bottom 20px

    &__image
        width 90px
        margin 0 15px 0 -8px
        float left

        img
            width 100%

    &__code
    &__amount
    &__item-price
        display inline-block

    &__title
        text-decoration underline
        margin-bottom 17px
        line-height 1.7
        display block

        &:hover
            color inherit
            text-decoration none


    &__amount
        margin 0 20px 0 10px

        input
            padding-left 8px
            border 1px solid #adb6c0
            border-radius 3px
            width 36px
            height 36px
            text-align center
            color $color-main

    &__code
        // float left

    &__item-price
        span
            font-size 16px
            font-family $font-bold

    &__total
        font-size 20px
        font-family $font-bold
        text-align right
        display inline-block
        float right

    &__total-price
        margin-bottom 9px

    &__currency
        font-size 14px
        font-family $font-regul


    &__total-btn
        btn-basket()
        border none
        font-size 12px
        text-transform uppercase
        line-height 1
